<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.xhuman.serial.demo">

    <!--用于访问网络，网络定位需要上网-->
    <uses-permission android:name="android.permission.INTERNET" />
    <!-- 允许后台访问串口（视系统版本和需求） -->
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <!--  USB通信-->
    <uses-permission android:name="android.permission.USB_PERMISSION" />
    <uses-permission android:name="com.example.usbreadwriterdaemon.USB_PERMISSION" />

    <uses-permission
        android:name="android.permission.HARDWARE_TEST"
        tools:ignore="ProtectedPermissions" />
    <!-- 访问 USB 设备（若通过 USB 转串口连接） -->
    <uses-permission android:name="android.hardware.usb.host" />
    <uses-feature
        android:name="android.hardware.usb.host"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.usb.accessory"
        android:required="false" />


    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:launchMode="singleTask"
        android:networkSecurityConfig="@xml/network_security_config"
        android:requestLegacyExternalStorage="true"
        android:supportsRtl="true"
        android:theme="@style/JHoo.BaseTheme"
        android:usesCleartextTraffic="true">

        <meta-data
            android:name="ScopedStorage"
            android:value="true" />

        <activity
            android:name="com.xhuman.serial.demo.StartAppActivity"
            android:exported="true"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <!-- USB -->
            <intent-filter>
                <action android:name="android.hardware.usb.action.USB_DEVICE_ATTACHED" />
            </intent-filter>

        </activity>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.xhuman.serial.demo.fileprovider"
            android:exported="false"
            android:grantUriPermissions="true">
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_paths" />
        </provider>
    </application>

</manifest>